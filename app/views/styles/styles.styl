// sticky footer height
footerHeight = 80px

// The html and body elements cannot have any padding or margin
html
body
    height 100%    

// Wrapper for page content to push down footer
#wrap
    min-height 100%
    height auto !important
    height 100%
    margin 0 auto -(footerHeight)

#push
#footer
    height footerHeight

#footer
    padding 0px 20px

[cr-model-list-filter]
    select
        width 100px
        margin 0 0 15px 0

textarea
input[type="text"]
input[type="number"]
    /* width: 100%; */

[cr-anyof-item]
[cr-array-item]
    position relative

[cr-anyof-item] hr
[cr-array-item] hr
    margin 10px 0

[cr-image-preview] img
    max-height 64px
    min-width 64px
    margin-top 8px

[cr-image] img
    float left
    display block
    background-color #ddd
    max-height 140px
    min-width 140px
    margin-right 12px
    
a
    &.red
        color #d2322d
    &.blue
        color #428bca
    &.green
        color #47a447
    &.glyphicon:hover
        text-decoration none   

[cr-model-list]
    .pagination > .disabled > span
    .pagination > .disabled > a
    .pagination > .disabled > a:hover
    .pagination > .disabled > a:focus
        cursor default
    
.well pre
    background #fff

.item-controls
    position absolute
    top 0
    right 0

.item-controls .btn-group
    margin-right 8px

.indent
    padding-left 12px
    margin-bottom 10px
    border-left 1px solid #eee

.margin-left-10
    margin-left 10px

.margin-right-10
    margin-right 10px

.margin-top-20
    margin-top 20px
    
.capitalize {
    text-transform: capitalize;    
}